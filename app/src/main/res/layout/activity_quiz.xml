<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.wordathon.QuizActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIZ: A CHALLENGE"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find the Correct meaning of Following word."
        android:textSize="17dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/wordID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_margin="30dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Questions: 10 "
            android:layout_margin="12dp"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attemp Left: "
            android:layout_margin="12dp"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:id="@+id/scored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scored : "
            android:layout_margin="12dp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/listviewIDquiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
