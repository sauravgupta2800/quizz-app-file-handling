<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.wordathon.Start_Menu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="  WELCOME TO WORD-A-THON"
        android:textColor="@color/colorAccent"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:onClick="showWords"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="SHOW WORDS"
                android:textSize="20dp"
                android:layout_margin="15dp"/>
            <Button
                android:onClick="QuizCorner"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="Quiz Corner"
                android:textSize="20dp"
                android:layout_margin="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:onClick="EnterWord"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="Enter WORDS"
                android:textSize="20dp"
                android:layout_margin="15dp"/>
            <Button
                android:onClick="ScoreBoard"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="high scorer"
                android:textSize="20dp"
                android:layout_margin="15dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
